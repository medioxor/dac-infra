{
    "builders": [
      {
        "type": "proxmox-iso",
        "proxmox_url": "https://{{user `proxmox_host`}}:8006/api2/json",
        "insecure_skip_tls_verify": "{{user `proxmox_skip_tls_verify`}}",
        "pool": "{{user `proxmox_vm_pool`}}",
        "username": "{{user `username`}}",
        "password": "{{user `password`}}",
        "vm_name": "Ubuntu2504",
        "node": "{{user `proxmox_node`}}",
        "sockets": 1,
        "cores": 1,
        "cpu_type": "host",
        "memory": 2048,
        "os": "l26",
        "network_adapters": [
          {
            "model": "virtio",
            "bridge": "{{user `proxmox_network_with_dhcp_and_internet`}}"
          }
        ],
        "disks": [
          {
            "type": "scsi",
            "disk_size": "64G",
            "storage_pool": "{{user `proxmox_disk_storage_pool`}}",
            "cache_mode": "writeback",
            "format": "raw"
          }
        ],
        "vga": {
          "type": "std",
          "memory": 32
        },
        "boot_iso": {
          "type": "scsi",
          "iso_url": "http://cdimage.ubuntu.com/ubuntu-server/daily-live/current/plucky-live-server-amd64.iso",
          "iso_checksum": "a6db1afebbbdfb924a4414399a23074745ec89ef31c8ceaceba69ccb33bd834e",
          "iso_storage_pool": "{{user `proxmox_iso_storage_pool`}}",
          "unmount": true
        },
        "scsi_controller": "virtio-scsi-pci",
        "boot_wait": "10s",
        "http_directory": "http",
        "http_bind_address": "{{user `provisioning_machine_ip`}}",
        "boot_command": [
          "c",
          "linux /casper/vmlinuz --- autoinstall ds='nocloud-net;s=http://{{ .HTTPIP }}:{{ .HTTPPort }}/' ",
          "<enter><wait>",
          "initrd /casper/initrd<enter><wait>",
          "boot<enter>"
        ],
        "ssh_timeout": "10000s",
        "ssh_username": "vagrant",
        "ssh_password": "vagrant",
        "qemu_agent": true,
        "template_name": "Ubuntu2504",
        "template_description": "Ubuntu 25.04, generated on {{ isotime \"2025-01-02T15:04:05Z\" }}"
      }
    ],
    "provisioners": [
      {
        "type": "shell",
        "inline": [
          "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done"
        ]
      },
      {
          "pause_before": "20s",
          "type": "shell",
          "environment_vars": [
              "HOME_DIR=/home/vagrant"
          ],
          "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
          "expect_disconnect": true,
          "scripts": [ 
              "./deps/update.sh",
              "./deps/networking.sh",
              "./deps/sudoers.sh",
              "./deps/vagrant.sh",
              "./deps/cleanup.sh"
          ]
      }
    ]
  }
